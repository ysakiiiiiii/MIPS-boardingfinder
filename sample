.data
boardinglist: .asciiz "D:/MIPS-Assembly-Project-Smart Boarding/boarding.txt"
fileWords: .space 1024

.text
.globl main

main:
    # Open file
    li $v0, 13
    la $a0, boardinglist
    li $a1, 0
    syscall
    move $s0, $v0

    # Check if open failed
    li $t0, -1
    beq $s0, $t0, file_open_failed

    # Read from file
    li $v0, 14
    move $a0, $s0
    la $a1, fileWords
    li $a2, 1024
    syscall

    # Print file contents
    li $v0, 4
    la $a0, fileWords
    syscall

    # Close file
    li $v0, 16
    move $a0, $s0
    syscall

    # Exit program
    li $v0, 10
    syscall

file_open_failed:
    li $v0, 4
    la $a0, open_fail_msg
    syscall

    li $v0, 10
    syscall

.data
open_fail_msg: .asciiz "Error opening file.\n"
